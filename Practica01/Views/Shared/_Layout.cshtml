<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Prueba006</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Prueba006.styles.css" asp-append-version="true" />
    <!-- Iconos -->
    <script src="https://kit.fontawesome.com/25ed10a800.js" crossorigin="anonymous"></script>
    <!-- DataTable-->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.css">
    <!-- Estilos Vistas-->
    @await RenderSectionAsync("Estilos", required: false)
    <!-- Tabs -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Menú lateral-->
        <div class="border-end bg-white" id="sidebar-wrapper">

            <div class="sidebar-heading border-bottom bg-light">
                <a class="" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="https://www.comercialsocoepa.cl/img/Logo-Comercial-Socoepa-Vectorizado.png" alt="logo" width="200" height="68">
                </a>
            </div>
            <div class="list-group list-group-flush">
                <a class="list-group-item list-group-item-action list-group-item-light p-3" asp-area="" asp-controller="Home" asp-action="Requerimientos">
                    <i class="fa-solid fa-wrench"></i>  Requerimientos
                </a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" asp-area="" asp-controller="Home" asp-action="Mantenedores">
                    <i class="fa-solid fa-gear"></i>  Mantenedores
                </a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" asp-area="" asp-controller="Home" asp-action="Informes">
                    <i class="fa-solid fa-list"></i>  Informes
                </a>
            </div>
        </div>
        <!-- Contenedor de contenido-->
        <div id="page-content-wrapper">
            <!-- Barra de navegación -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">  PERFIL <i class="fa-solid fa-circle-user fa-2xl"></i></a>
                                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index"> <i class="fa-solid fa-house"></i> Menú Principal</a>
                                    <a class="dropdown-item" href="#!"> <i class="fa-solid fa-lock"></i> Cambiar Clave</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#!"> <i class="fa-solid fa-right-from-bracket"></i> Salir</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- Contenidos -->
            <div class="container-fluid">
                <div class="container">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>
    </div>

    <footer class=" text-center">
        <div class="f-s-10-Black" style="position: relative;">
            &copy; 2023 - Practica01 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- DataTable-->
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
</body>
</html>
