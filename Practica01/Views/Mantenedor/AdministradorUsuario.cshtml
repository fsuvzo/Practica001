@model Practica01.Models.Usuario
@section Estilos {

}

<div class="container p-2 mt-2 text-center">
    <h3>Administrador de Usuarios</h3>
</div>
<div class="container mt-4">
    <div class="row">
        <div class="col-sm-4 border rounded ">
            <form>
                <div class="mb-3 mt-2">
                    <h4 class="p-2">Información de Usuario <hr /></h4>
                    <label for="username"> Nombre de Usuario</label>
                    <input class="form-control" id="username" placeholder="Nombre de usuario" name="username">
                </div>
                <div class="mb-3">
                    <label for="nombre">Nombre </label>
                    <input class="form-control" id="nombre" placeholder="Nombre" name="nombre">
                </div>
                <div class="mb-3">
                    <label for="apaterno">Apellido </label>
                    <input class="form-control" id="apaterno" placeholder="Apellido" name="paterno">
                </div>
                <div class="mb-3">
                    <label for="email">Email</label>
                    <input class="form-control" id="email" placeholder="Email" name="email">
                </div>
                <div class="mb-3">
                    <label for="apaterno">estado </label>
                    <input class="form-control" id="estado" placeholder="Estado" name="estado">
                </div>
                <div class="mb-3 text-center">
                    <button type="submit" class="btn btn-success">Guardar</button>
                </div>
            </form>
        </div>
        <div class="col-sm-4 border rounded ">
            <div class="mb-3 mt-2 ">
                <h4 class="p-2">Asignación de Sistemas <hr /></h4>
            </div>
            <div class="mx-auto border">
                <h5 class="p-2">Sistemas </h5>
                <form asp-action="Index">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label> Buscar Usuario </label>
                        <select asp-for="Id" class="form-control" asp-items="@ViewBag.nombres"></select>
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-sm-4 border rounded ">
            <h3>Column 3</h3>
            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit...</p>
            <p>Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris...</p>
        </div>
    </div>
</div>